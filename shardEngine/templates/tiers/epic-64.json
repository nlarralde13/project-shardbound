{
  "id": "epic-64",
  "version": "1.0.0",
  "grid": { "cols": 64, "rows": 64, "tile_size": 16 },

  "biomes": { "pack": "temperate-base" },

  "water": {
    "ocean_ring": 2,
    "coast_width": [1, 3],
    "target_percent": 0.30
  },

  "hydrology": {
    "rivers": { "min": 3, "max": 5 },
    "lake_chance": 0.35,
    "lake_size": [4, 12],
    "merge_confluences": true
  },

  "settlements": {
    "budget": { "city": 2, "town": 5, "village": 9, "port": 2 },
    "rules": {
      "city":   ["near_river_or_coast", "min_spacing_8", "avoid_swamp"],
      "town":   ["near_road_or_river",  "min_spacing_5"],
      "village":["near_fertile",        "min_spacing_3"],
      "port":   ["ocean_coast_only", "prefer_river_mouth"]
    }
  },

  "roads": {
    "connectivity": "mst",
    "bridge": { "max_span": 3 }
  },

  "poi": {
    "budget": 12,
    "min_spacing": 3,
    "tables": ["ruins-common", "waterfront-common"]
  },

  "resources": {
    "potentials": ["ore", "timber", "herbs", "fish"],
    "thresholds": { "ore": 0.78, "timber": 0.72, "herbs": 0.56, "fish": 0.66 },
    "max_nodes_per_room": 2,
    "ambient_roll": true,
    "respawn_seconds": { "small": 600, "medium": 1800, "large": 5400, "ambient": 86400 }
  }
}
